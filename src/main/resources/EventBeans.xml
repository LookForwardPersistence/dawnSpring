<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventMessage" class="com.dawn.event.EventMessage">
        <property name="message" value="Comne on Dawn!"/>
    </bean>

    <bean id="startEventHandler" class="com.dawn.event.StarEventHandler"></bean>
    <bean id="stopEventHandler" class="com.dawn.event.StopEventHandler"></bean>

    <!--自定义事件-->
    <bean id="customEventHandler" class="com.dawn.event.CustomEventHandler"></bean>

    <bean id="customEventPublisher" class="com.dawn.event.CustomEventPublisher"></bean>
</beans>